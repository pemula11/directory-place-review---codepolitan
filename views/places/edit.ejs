<% layout('layouts/app') %>
    <h1 class="text-center">Update Places</h1>
  
  <div class="row mb-5">
    <div class="col-6">
      <form action="/places/<%=place._id  %>?_method=PUT"  class="validated-form" method="POST" enctype="multipart/form-data" novalidate>
          <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" name="place[title]" id="title" class="form-control" value="<%= place.title %>" required>
              <div class="invalid-feedback">
                  Please choose a username.
                </div>  
          </div>
          
          <div class="mb-3">
              <label for="location" class="form-label">Location</label>
                <input type="text" name="place[location]" id="location" class="form-control" value="<%= place.location %>" required>
                <div class="invalid-feedback">
                  Please choose a username.
                </div>  
          </div>
          <div class="mb-3">
              <label for="price" class="form-label">price</label>
              <input type="text" name="place[price]" id="price" class="form-control" value="<%= place.price %>" required>
              <div class="invalid-feedback">
                  Please choose a username.
                </div>  
          </div>
          <div class="mb-3">
              <label for="description" class="form-label">Description</label>
               <textarea name="place[description]" id="description" class="form-control"  required><%= place.description %></textarea>
               <div class="invalid-feedback">
                  Please choose a username.
                </div>  
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="image" id="image" accept="image/*"  class="form-control" multiple >
            <div class="invalid-feedback">
                Please choose a username.
              </div>  
        </div>
          
          <button type="submit" class="btn btn-success">Edit Place</button>
      </form>
  </div>


  <% if (place.images.length > 0) { %>
   
  
  <div class="col-6">
    <h5>Delete Image</h5>
    <div class="form-group from-check">
      <input type="checkbox" name="" id="checkAll" class="form-check-input">
      <label for="checkAll" class="form-check-label">Check All</label>
    </div>
    <form action="/places/<%= place._id %>/image?_method=DELETE" method="post" class="d-flex flex-wrap">
      <% place.images.forEach((image, index) => { %>
        <div class="col md-4">
          <div class="card mb-3">
            <img src="/images/<%= image.filename %>" class="card-img-top" alt="" srcset="">
            <div class="card-body">
              <label for="" class="custom-checkbox">
                <input type="checkbox" name="images[]" id="image-<%= index %>" value="<%= image.url %>" class="form-check-input">
                <label for="image-<%= index %>" class="form-check-text">pilih</label>
              </label>
            </div>
          </div>
        </div>
      <% }); %>


      <div class="w-100"></div>
        <button type="submit" class="btn btn-danger">Delete</button>


    </form>

  </div>
  <% } %>  
  </div>
  
<script>
  document.getElementById('checkAll').addEventListener('change', function () {
    const checkbox = document.getElementsByName('images[]');
    for (let i = 0; i < checkbox.length; i++){
      checkbox[i].checked = this.checked;
    }
  })
</script>